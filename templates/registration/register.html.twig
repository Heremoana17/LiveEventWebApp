{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="row">
			<div class="col mx-4 mx-lg-0">
				<h1>Inscription</h1>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}
				<section class="d-lg-flex">
					<fieldset class='col-lg-6 px-2'>
						<legend>Mon identité</legend>
						{{ form_row(registrationForm.lastname) }}
						{{ form_row(registrationForm.firstname) }}
						{{ form_row(registrationForm.email) }}
					</fieldset>
					<fieldset class='col-lg-6 px-2'>
						<legend>Mes coordonnées</legend>
						{{ form_row(registrationForm.address) }}
						{{ form_row(registrationForm.zipcode) }}
						{{ form_row(registrationForm.city) }}
					</fieldset>
				</section>
				<section class='px-2'>
					{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
					{{ form_row(registrationForm.RGPDConsent) }}
					{{ form_row(registrationForm.newLetter) }}
				</section>
				<button type="submit" class="btn btn-primary btn-lg">Envoyer</button>
				<a class="btn btn-secondary" href="{{path('app_login')}}">
					Me connecter avec un compte existant
				</a>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

{% endblock %}
