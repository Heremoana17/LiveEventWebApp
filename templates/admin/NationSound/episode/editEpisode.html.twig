{% extends 'base.html.twig' %}

{% block title %}Ajout episode
{% endblock %}

{% block body %}
	<body id='homeNationSound'>
		<header class='container pt-5 px-4 px-lg-0'>
			<h1 class='text-white text-center title mb-4'>
				Ajout d'un episode
			</h1>
			<hr>
		</header>
		<section class='container'>
			<section class='my-3'>{% include '_partials/_dashboardNationSound.html.twig' %}</section>
			<section class="row pt-4">
				{{ form_start(form) }}
				{{ form_row(form.name) }}
				{{ form_row(form.hour) }}
				{{ form_row(form.artiste) }}
				{{ form_row(form.lieu) }}
				{% if day is defined %}
					<section class='d-none'>
						{{ form_row(form.day) }}
					</section>
				{% else %}
					<section class=''>
						{{ form_row(form.day) }}
					</section>
				{% endif %}
				{{ form_end(form) }}
			</section>
		</section>
	</body>
{% endblock %}
